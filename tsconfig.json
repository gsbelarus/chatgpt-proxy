{
  "compilerOptions": {
     "target": "ESNext",
     "module": "ESNext",
     "rootDir": "./src",
     "moduleResolution": "node",
     "resolveJsonModule": true, /* in case you are importing JSON files */
     "outDir": "./build",
     "esModuleInterop": true,
     "forceConsistentCasingInFileNames": true,
     "strict": true,
     "noImplicitAny": true,
     "skipLibCheck": true,
     "sourceMap": true
  }
}